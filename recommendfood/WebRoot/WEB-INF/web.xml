<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>common</display-name>
  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/conf/spring/*.xml</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>/WEB-INF/conf/properties/log4j.properties</param-value>
  </context-param>
  <filter>
    <filter-name>CharacterEncoding</filter-name>
    <filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
 	<filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
<!--     <init-param> -->
<!--       <param-name>actionPackages</param-name> -->
<!--       <param-value>com.common.action</param-value> -->
<!--     </init-param> -->
    <init-param>
      <param-name>config</param-name>
      <param-value>
 		 		struts-default.xml,
 		 		struts-plugin.xml,
 		 		../conf/struts/struts.xml,
 		 		../conf/struts/struts-manager.xml,
 		 		../conf/struts/struts-community.xml,	
 		 	</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <listener>
    <listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>InitConfigServlet</servlet-name>
    <servlet-class>com.recommendfood.factory.DatabaseFactory</servlet-class>
  </servlet>
  

  <servlet-mapping>
    <servlet-name>InitConfigServlet</servlet-name>
    <url-pattern>/InitConfigServlet</url-pattern>
  </servlet-mapping>
  
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
  </error-page>
  
  <welcome-file-list>
    <welcome-file>/user/firstIndex.jsp</welcome-file>
  </welcome-file-list>
</web-app>